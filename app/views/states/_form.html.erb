<%= form_for @state do |f| %>
	<% if @state.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@state.errors.count, "error") %> prohibido guardar Estado:</h2>
			<ul>
			<% @state.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :country_id %></strong></td>
			<td style="width:70%">
				<%= f.text_field :country_id %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :name %></strong></td>
			<td style="width:70%">
				<%= f.text_field :name %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :code %></strong></td>
			<td style="width:70%">
				<%= f.text_field :code %>
			</td>
		</tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
