<%= form_for @state do |f| %>
	<% if @state.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@state.errors.count, "error") %> prohibido guardar Estado:</h2>
			<ul>
			<% @state.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :country_id %><br />
		<%= f.text_field :country_id %>
	</p>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :code %><br />
		<%= f.text_field :code %>
	</p>
	<p><%= f.submit %></p>
<% end %>
