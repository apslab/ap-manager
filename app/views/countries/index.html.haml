- content_for(:title) do
  %h1= t('scaffold.actions.list', :item => Country.model_name.human).titlecase

%table
  %tr
    %th= Country.human_attribute_name('code')
    %th= Country.human_attribute_name('name')
    %th
    %th
    %th

  - @countries.each do |country|
    %tr
      %td= country.code
      %td= country.name
      %td= link_to t('scaffold.actions.show').titlecase, country
      %td= link_to t('scaffold.actions.edit').titlecase, edit_country_path(country)
      %td= link_to t('scaffold.actions.destroy').titlecase, country, :confirm => t('scaffold.actions.destroy_confirm'), :method => :delete

%br

= link_to t('scaffold.actions.new', :item => Country.model_name.human).titlecase, new_country_path

