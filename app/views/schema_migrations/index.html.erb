<h1>Schema Migrations</h1>

<table>
	<tr>
		<th>Version</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% for schema_migration in @schema_migrations %>
		<tr>
			<td><%= schema_migration.version %></td>
			<td><%= link_to "Ver", schema_migration %></td>
			<td><%= link_to "Editar", edit_schema_migration_path(schema_migration) %></td>
			<td><%= link_to "Eliminar", schema_migration, :confirm => 'Esta seguro?', :method => :delete %></td>
		</tr>
	<% end %>
</table>
<p><%= link_to "Nuevo Schema Migration", new_schema_migration_path %></p>
