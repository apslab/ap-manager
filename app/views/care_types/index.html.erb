<h1>Care Types</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Code</th>
		<th>Specialty</th>
		<th>User Message</th>
		<th>Print Message</th>
		<th>Need Form</th>
		<th>Default</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% for care_type in @care_types %>
		<tr>
			<td><%= care_type.name %></td>
			<td><%= care_type.code %></td>
			<td><%= care_type.specialty_id %></td>
			<td><%= care_type.user_message %></td>
			<td><%= care_type.print_message %></td>
			<td><%= check_box_tag "eula", care_type.need_form, care_type.need_form, :disabled => true %></td>
			<td><%= check_box_tag "eula", care_type.default, care_type.default, :disabled => true %></td>
            <td><a href="/care_types/<%= care_type.id.to_s %>"><img alt="Ver" src="images/icons/16x16/application_get.png" title="Ver" /></a></td>
            <td><a href="/care_types/<%= care_type.id.to_s %>/edit"><img alt="Editar" src="images/icons/16x16/application_edit.png" title="Editar" /></a></td>
            <td><a href="/care_types/<%= care_type.id.to_s %>" data-confirm="Esta ud. seguro?" data-method="delete" rel="nofollow">
				<img alt="Eliminar" src="images/icons/16x16/application_delete.png" title="Eliminar" /></a>
			</td>
		</tr>
	<% end %>
</table>
<p><%= link_to "Nueva Care Type", new_care_type_path %></p>
