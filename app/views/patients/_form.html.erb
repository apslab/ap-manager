<%= form_for @patient do |f| %>
	<% if @patient.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@patient.errors.count, "error") %> prohibido guardar Paciente:</h2>
			<ul>
			<% @patient.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<table class="data" style="width:100%" >
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :person_id %></strong></td>
			<td style="width:70%">
				<%= f.text_field :person_id %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :code %></strong></td>
			<td style="width:70%">
				<%= f.text_field :code %>
			</td>
		</tr>
		<tr>
			<td style="width:30%;background-color: #C3D5D5;"><strong><%= f.label :medical_history %></strong></td>
			<td style="width:70%">
				<%= f.text_field :medical_history %>
			</td>
		</tr>
	</table>
	<p><%= f.submit %></p>
<% end %>
