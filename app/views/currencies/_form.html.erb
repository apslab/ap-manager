<%= form_for @currency do |f| %>
	<% if @currency.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@currency.errors.count, "error") %> prohibido guardar Moneda:</h2>
			<ul>
			<% @currency.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :code %><br />
		<%= f.text_field :code %>
	</p>
	<p>
		<%= f.label :default %><br />
		<%= f.check_box :default %>
	</p>
	<p><%= f.submit %></p>
<% end %>
