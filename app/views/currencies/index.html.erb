<h1>Monedas</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Code</th>
		<th>Default</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% for currency in @currencies %>
		<tr>
			<td><%= currency.name %></td>
			<td><%= currency.code %></td>
			<td><%= check_box_tag "eula", currency.default, currency.default, :disabled => true %></td>
            <td><a href="/currencies/<%= currency.id.to_s %>"><img alt="Ver" src="images/icons/16x16/application_get.png" title="Ver" /></a></td>
            <td><a href="/currencies/<%= currency.id.to_s %>/edit"><img alt="Editar" src="images/icons/16x16/application_edit.png" title="Editar" /></a></td>
            <td><a href="/currencies/<%= currency.id.to_s %>" data-confirm="Esta ud. seguro?" data-method="delete" rel="nofollow">
				<img alt="Eliminar" src="images/icons/16x16/application_delete.png" title="Eliminar" /></a>
			</td>
		</tr>
	<% end %>
</table>
<p><%= link_to "Nueva Moneda", new_currency_path %></p>
