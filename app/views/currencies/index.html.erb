<h1>Currencies</h1>

<table>
	<tr>
		<th>Company</th>
		<th>Name</th>
		<th>Code</th>
		<th>Default</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% for currency in @currencies %>
		<tr>
			<td><%= currency.company_id %></td>
			<td><%= currency.name %></td>
			<td><%= currency.code %></td>
			<td><%= currency.default %></td>
			<td><%= link_to "Ver", currency %></td>
			<td><%= link_to "Editar", edit_currency_path(currency) %></td>
			<td><%= link_to "Eliminar", currency, :confirm => 'Esta seguro?', :method => :delete %></td>
		</tr>
	<% end %>
</table>
<p><%= link_to "Nuevo Currency", new_currency_path %></p>
