= raw " &raquo; #{current_company.name.titlecase}" unless current_company.blank?
= link_to(icon('application_edit', :small, :title => 'Administración de Companías'), companies_path, :style => 'float:right;')
- if current_user.companies.many?
  %div{:style => 'float:right;margin-top:11px;'}
    = collection_select(:company, :id, current_user.companies, :id, :name, { :include_blank => '-- Cambiar de Companía --'}, :onchange => 'location.href="?cc="+$(this).val();')

